{
    "manifest_version": 2,
     
    "name": "Detect_Mal",
    "description": "You can easily know the site is safe or not",
    "version": "1.0",
    "background":{
        "scripts":[
           "script.js",
           "background.js"
        ],
        "persistent":true
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },

    "permissions": [
        "activeTab",
        "<all_urls>",
        "tabs"
    ]
}